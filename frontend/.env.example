# ============================================================================
# Lanfinitas AI Frontend - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in the values for your environment.
#
# Usage:
#   1. Copy: cp .env.example .env
#   2. Edit .env with your actual values
#   3. Restart the development server (npm run dev)

# ============================================================================
# API Configuration
# ============================================================================
# Backend API base URL (include /api/v1 suffix)
VITE_API_URL=http://localhost:8000/api/v1

# API request timeout in milliseconds
VITE_API_TIMEOUT=30000

# Maximum retry attempts for failed API requests
VITE_API_MAX_RETRIES=3

# ============================================================================
# WebSocket Configuration
# ============================================================================
# WebSocket URL for real-time updates
VITE_WS_URL=ws://localhost:8000/ws

# WebSocket reconnection interval in milliseconds
VITE_WS_RECONNECT_INTERVAL=5000

# Maximum WebSocket reconnection attempts
VITE_WS_MAX_RECONNECT_ATTEMPTS=5

# ============================================================================
# Application Configuration
# ============================================================================
# Application name
VITE_APP_NAME=Lanfinitas AI

# Application version (should match package.json)
VITE_APP_VERSION=0.1.0
VITE_VERSION=1.0.0

# Environment: development, staging, production
VITE_ENV=development
VITE_ENVIRONMENT=development

# ============================================================================
# Feature Flags
# ============================================================================
# Enable React Query DevTools and other development tools
VITE_ENABLE_DEV_TOOLS=true

# Enable mock data for testing without backend
VITE_ENABLE_MOCK_DATA=false

# Enable specific page features
VITE_FEATURE_IDENTITY_MANAGEMENT=true
VITE_FEATURE_DELEGATION_CONSOLE=true
VITE_FEATURE_WALLET_DASHBOARD=true
VITE_FEATURE_TEMPLATE_LIBRARY=true

# ============================================================================
# File Upload Configuration
# ============================================================================
# Maximum file size in bytes (default: 10MB)
VITE_MAX_FILE_SIZE=10485760

# Allowed file types for uploads (comma-separated)
VITE_ALLOWED_FILE_TYPES=.obj,.fbx,.step,.stl,.gltf,.glb,.jpg,.jpeg,.png

# ============================================================================
# Error Tracking (Sentry)
# ============================================================================
# Sentry DSN for error tracking (leave empty to disable)
# Get your DSN from: https://sentry.io/settings/projects/
VITE_SENTRY_DSN=

# ============================================================================
# UI Configuration
# ============================================================================
# Default theme: light, dark
VITE_DEFAULT_THEME=dark

# Items per page for pagination
VITE_ITEMS_PER_PAGE=20

# ============================================================================
# Authentication
# ============================================================================
# Local storage key for authentication token
VITE_AUTH_TOKEN_KEY=lanfinitas_auth_token

# Session timeout in minutes
VITE_SESSION_TIMEOUT=60

# ============================================================================
# Notes
# ============================================================================
# - All VITE_* variables are exposed to the client-side code
# - Never commit sensitive values (API keys, tokens) to version control
# - Changes to .env require restarting the dev server
